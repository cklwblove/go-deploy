# EditorConfig is awesome: https://EditorConfig.org

# 根配置文件
root = true

# 所有文件的通用设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Go文件使用tab缩进（Go官方标准）
[*.go]
indent_style = tab
indent_size = 4

# JSON文件使用2个空格缩进
[*.json]
indent_style = space
indent_size = 2

# YAML文件使用2个空格缩进
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown文件保留尾随空格（用于换行）
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Go模块文件使用tab缩进
[go.{mod,sum}]
indent_style = tab

# 配置文件使用2个空格缩进
[*.{conf,config,cfg,ini}]
indent_style = space
indent_size = 2

# Shell脚本使用2个空格缩进
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Makefile必须使用tab
[{Makefile,makefile,*.mk}]
indent_style = tab

# Docker文件使用2个空格缩进
[{Dockerfile,*.dockerfile}]
indent_style = space
indent_size = 2

# Git配置文件使用tab
[.git*]
indent_style = tab
